<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp"
    android:background="#ffffff"
    android:orientation="vertical">

<ImageView
    android:id="@+id/iv_tab_detail_item_icon"
    android:layout_width="90dp"
    android:layout_height="90dp"
    android:layout_marginLeft="6dp"
    android:src="@drawable/news_pic_default"/>

    <TextView
        android:id="@+id/tv_tab_detail_item_title"
        android:text="APEC会议期间调休企业员工盼同步放假"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/iv_tab_detail_item_icon"
        android:textColor="#000000"
        android:layout_marginTop="3dp"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/tv_tab_detail_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/iv_tab_detail_item_icon"
        android:layout_alignBottom="@+id/iv_tab_detail_item_icon"
        android:textColor="#000000"
        android:textSize="14sp"
        android:layout_marginBottom="3dp"
        android:text="2014-10-1110:03"/>
    <ImageView
        android:id="@+id/iv_tab_detail_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_tab_detail_item_time"
        android:layout_alignParentRight="true"
        android:layout_marginRight="6dp"
        android:src="@drawable/icon_news_comment_num"/>
</RelativeLayout>